<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    
    <div id="menu-container" class="menu-container">

     <div id="File" class="menu">File</div>
     <div id="Home" class="menu">Home</div>
    </div>
    <div id="menu-option-container" class="menu-option-container">

        <div id="File-menu-options" class="menu-options">
            <div id="new">New</div>
            <div id="open">Open</div>
            <div id="save">Save</div>
        </div>
        <div id="Home-menu-options" class="menu-options">
            <div id="formatting-col">
                <div class="font-row">
                    <select  id="font-family">
                        <option value="cursive">cursive</option>
                        <option value="arial">Arial</option>
                        <option value="sans-serif">Sans-serif</option>
                        <option value="monospace">Monospace</option>
                        <option value="serif">Serif</option>
                    </select>
                    <select  id="font-size">
                        <option value="12">12</option>
                        <option value="20">20</option>
                        <option value="32">32</option>
                        <option value="44">44</option>
                    </select>
                    
                </div>
                <div class="style-row">
                    <button id="bold">B</button>
                    <button id="underline">U</button>
                    <button id="italic">I</button>
                    <input type="color" id="b-color">
                    <input type="color" id="font-color">
                </div>
            </div>
            <div id="allign-col">

                    <button id="left">L</button>
                    <button id="center">C</button>
                    <button id="right">R</button>
            </div>
    
        </div>
    </div>
    <div id="formula-container" class="formula-container">
        <input type="text" id="address-input" class="address-input">
        <input type="text" id="formula-input" class="formula-input">
      
    </div>
    <div id="cell-container" class="cell-container">
        <div id="t1-cell" class="t1-cell"></div>
        <div id="top-row" class="top-row">
            <%for(let i=0;i<cols;i++){%>
                <div class="cell">
                    <%=String.fromCharCode(i+65)%>      
                </div>  
            <%}%>
        </div>
        <div id="left-col" class="left-col">
            <%for(let j=0;j<rows;j++){%>

              <div class="cell">
                  <%=j+1%>
              </div>
                <%}%>
        </div>

        <div id="grid" class="grid">
        <%for(let i=0;i<rows;i++){%>
          <div class="row">
            <%for(let j=0;j<cols;j++){%>
                <div class="cell" contenteditable="true" rid=<%=i%> cid=<%=j%>>
                </div>
            <%}%>
          </div>
        <%}%>
    </div>
  
</ivd>

    <div id="sheets" class="sheets"> </div>
    <script src="script1.js"></script>
        
</body>
</html>